root                     = true

[*]
end_of_line              = lf
charset                  = utf-8
trim_trailing_whitespace = true
insert_final_newline     = true
indent_style             = tab
tab_size                 = 8
# indent_size              = 8

[*.go]
max_line_length          = 80

[*.js]
max_line_length          = 80

[*.html]
tab_size                 = 4

[*.tmpl]
tab_size                 = 4
